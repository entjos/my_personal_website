<style>
  table, th, td {
    vertical-align: top;
    border-collapse: separate;
    border-spacing: 15px 0;
    max-width: 700px;
  }
  
  td {
   height: 100px;
   min-width: 85px;
  }
  
  a { 
    color: inherit; 
  }

p {
  display: inline;
}
</style>

<% for (var i = 0; i < items.length; i++) {%>
  <b><font size="+2"><%= items[i].year %></font></b>
  <table>
    <% for (var j = 0; j < items[i].events.length; j++) {%>
      <tr>
        <td align='right'>
          <%= items[i].events[j].MMdd %><br>
          <font size="-1"><a href="<%- items[i].events[j].slides %>">Slides</a>
          <% if(items[i].events[j].materials != null) {%>
            <br><a href="<%- items[i].events[j].materials %>">Materials</a>
          <%} %>
        </font>
        </td>
        <td>
          <b><%= items[i].events[j].title %></b><br>
          <%= items[i].events[j].occasion %>
        </td>
      </tr>
    <%} %>
  </table>
<%} %>
